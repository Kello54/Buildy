{
  "openapi": "3.0.0",
  "info": {
    "title": "Main API",
    "description": "This is the main Swagger API",
    "version": "1.0.0"
  },
  "paths": {
    "/hello": {
      "get": {
        "summary": "Returns a simple greeting",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "example": { "message": "Hello, World!" }
              }
            }
          }
        }
      }
    },
    "/status": {
      "get": {
        "summary": "Returns service status",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": { "status": "running", "uptime": "12345s" }
              }
            }
          }
        }
      }
    }
  }
}
